@model IEnumerable<Employee>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Multi";
    int counter = 0;
}

<h4 class = "bg-info text-center text-white m-2 p-2">Edit All</h4>

<form method = "post" asp-action = "UpdateAll">
    <div class = "container">
        @foreach (Employee e in Model)
       {
           <div class = "form-row p-1">
                <div class = "col">
                    <input class = "form-control" value = "@e.SSN" name = "Employees[@counter].SSN" readonly></input>
                </div>
                 <div class = "col">
                    <input class = "form-control" value = "@e.FirstName" name = "Employees[@counter].FirstName" readonly></input>
                </div>
                 <div class = "col">
                    <input class = "form-control" value = "@e.FamilyName" name = "Employees[@counter].FamilyName" readonly></input>
                </div>
                 <div class = "col">
                    <input class = "form-control" value = "@e.Salary" name = "Employees[@counter].Salary" ></input>
                </div>
           </div>     
           counter++;
       }
       <div class = "text-center d-grid gap-2 col-6 mx-auto">
           <button type = "submit" class = "btn btn-primary">Save All</button>
           <a asp-action = "Index" class = "btn btn-warning" asp-controller = "Home">Cancel</a>
       </div>
    </div>
</form>






