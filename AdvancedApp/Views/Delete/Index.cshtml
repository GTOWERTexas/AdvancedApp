@model IEnumerable<Employee>
@{
    Layout = "_Layout";
    ViewData["Title"] = "REstore";

}

<table class = "table table-striped table-bordered table-sm">
    <thead>
        <tr><th>SSN</th><th>First Name</th><th>Family Name</th><th></th><th></th></tr>
    </thead>
    <tbody>
        @foreach (Employee e in Model)
       {
           <tr>
               <td>@e.SSN</td>
               <td>@e.FirstName</td>
               <td>@e.FamilyName</td>
               <td class = "text-center bg-primary">
                   <form method = "post" asp-action = "Restore">
                        <input type = "hidden" value = "@e.SSN" name  = "SSN"></input>
                   <input type = "hidden" value = "@e.FirstName" name  = "FirstName"></input>
                   <input type = "hidden" value = "@e.FamilyName" name  = "FamilyName"></input>
                   <button type = "submit" class = "btn btn-primary" style = "width: 100%; height: 100%">ReStore</button>
                   </form>
                  
               </td>
               <td>
                   <form method = "post" asp-action = "Delete">
                     <input type = "hidden" value = "@e.SSN" name  = "SSN"></input>
                   <input type = "hidden" value = "@e.FirstName" name  = "FirstName"></input>
                   <input type = "hidden" value = "@e.FamilyName" name  = "FamilyName"></input>
                   <input type  = "hidden" value = "@e.OtherIdentity.Id" name = "OtherIdentity.Id"></input>
                   <button type = "submit" class = "btn btn-warning" style = "width: 100%; height: 100%">Delete</button>
                   </form>
               </td>

           </tr>
       }
    </tbody>
</table>

<form method = "post" asp-action = "DeleteAll">         
       <button type = "submit" class = "btn btn-warning" >Delete All</button>
</form>