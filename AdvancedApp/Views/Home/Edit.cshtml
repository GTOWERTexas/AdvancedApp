@model Employee
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Employee";
}
<h4 class  = "bg-primary text-center text-white p-2">Create/Edit</h4>
<form asp-action = "Update" method = "post">
    <input type = "hidden" asp-for  = "Id"></input>
   @* <input type = "hidden" asp-for = "RowVersion"></input>*@
    
    <div class = "form-group">
        <label class = "form-control-label" asp-for = "SSN" ></label>
        <input asp-for = "SSN" class = "form-control" readonly = "@Model.SSN"></input>
    </div>
    <div class = "form-group">
        <label class = "form-control-label" asp-for = "FirstName"></label>
        <input asp-for = "FirstName" class = "form-control" readonly = "@Model.FirstName"></input>
    </div>
    <div class = "form-group">
        <label class = "form-control-label" asp-for = "FamilyName"></label>
        <input asp-for = "FamilyName" class = "form-control" readonly = "@Model.FamilyName"></input>
    </div>
    <div class = "form-group">
        <label class = "form-control-label" asp-for = "Salary"></label>
        <input asp-for = "Salary" class = "form-control"></input>
    </div>

    <input type = "hidden" asp-for = "OtherIdentity.Id"></input>
    <div class = "form-group">
        <label class  ="form-control-label">Other Identity Name</label>
        <input class = "form-control" asp-for = "OtherIdentity.Name"></input>
    </div>
    <div class = "form-check">
         <input type = "checkbox" class = "form-check-input" asp-for = "OtherIdentity.InActiveUse"></input>
        <label class  = "form-check-label" asp-for = "OtherIdentity.InActiveUse">
           In Active Use
        </label>
    </div>


    <div class = "text-center">
        <button class = "btn btn-sm badge-pill btn-primary" type = "submit">Save</button>
        <a class = "btn btn-sm badge-pill btn-warning" asp-action = "Index">Cancel</a>
    </div>

</form>